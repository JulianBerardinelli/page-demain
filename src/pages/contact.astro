---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="" title="Contacto" />

  <ContactUs
    id="form"
    title="¡Escribinos!"
    subtitle="Si buscás una respuesta rápida, podés visitar nuestra sección de Preguntas Frecuentes. Si no encontrás lo que necesitás, nuestro equipo de atención estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, aceptás el tratamiento de tus datos personales de acuerdo con nuestra política de privacidad.',
    }}
    description="Nuestro equipo suele responder dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos para ayudarte!"
    items={[
      {
        title: 'Atención general',
        description:
          'Consultanos sobre gestión de cuentas, navegación del sitio, problemas de pago, acceso a productos o cualquier otra duda general sobre nuestro servicio.',
      },
      {
        title: 'Consultas de ventas',
        description:
          'Estamos disponibles para consultas sobre compras, opciones de personalización, licencias comerciales o cualquier pregunta relacionada con nuestros productos.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Si tenés problemas con la instalación de plantillas, edición, compatibilidad o descargas, nuestro equipo técnico está listo para ayudarte.',
      },
      {
        title: 'Teléfono',
        description: '+54 (11) 1234-5678',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'info@montenievas.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
